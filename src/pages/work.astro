    font-weight: 600;
    font-size: 0.9rem;
  }
  
  /* Publications */
  .decade-group {
    margin-bottom: 50px;
  }
  
  .decade-title {
    font-size: 1.8rem;
    color: var(--green-primary);
    margin-bottom: 25px;
    padding-bottom: 10px;
    border-bottom: 2px solid var(--green-light);
  }
  
