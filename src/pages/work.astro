---
import Layout from '../layouts/Layout.astro';
import { fetchFromSanity, truncateText, formatYear } from '../lib/sanity.js';

const base = import.meta.env.BASE_URL || '';

// Fetch all data with defensive patterns
const projects = await fetchFromSanity(
  `*[_type == "project"]{
    _id, title, description, status, year, url, themes,
    "slug": slug.current,
    "imageUrl": mainImage.asset->url
  }`,
  []
) || [];

const publications = await fetchFromSanity(
  `*[_type == "publication"] | order(year desc){
    _id, title, year, publicationType, doi, url, abstract, themes,
    "slug": slug.current
  }`,
  []
) || [];

const media = await fetchFromSanity(
  `*[_type == "media"]{
    _id, title, outlet, date, url, mediaType, description,
    "imageUrl": image.asset->url
  }`,
  []
) || [];

// Filter out projects with malformed titles (more than 100 chars likely indicates data issue)
const validProjects = (projects || []).filter(p => (p?.title?.length ?? 0) < 100);

// Group publications by decade
const pubsByDecade = (publications || []).reduce((acc, pub) => {
  const year = pub?.year;
  if (typeof year !== 'number') {
    acc['Other'] = acc['Other'] || [];
    acc['Other'].push(pub);
  } else {
    const decade = Math.floor(year / 10) * 10 + 's';
    acc[decade] = acc[decade] || [];
    acc[decade].push(pub);
  }
  return acc;
}, {} as Record<string, any[]>);

const decades = Object.keys(pubsByDecade).sort().reverse();
---

<Layout title="Work & Impact - Paul Chatterton">
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1 class="page-title">Work & <span class="text-accent">Impact</span></h1>
      <p class="page-desc">Three decades of research, projects, and public engagement working towards sustainable, just, and resilient communities.</p>
    </div>
  </section>

  <!-- Navigation Tabs -->
  <div class="tab-nav">
    <div class="container">
      <button class="tab-btn active" data-tab="projects">Projects ({validProjects?.length ?? 0})</button>
      <button class="tab-btn" data-tab="publications">Publications ({publications?.length ?? 0})</button>
      <button class="tab-btn" data-tab="media">Media ({media?.length ?? 0})</button>
    </div>
  </div>

  <!-- Projects Section -->
  <section id="projects" class="section tab-content active">
    <div class="container">
      <div class="grid-3">
        {(validProjects || []).map((project) => (
          <div class="project-card">
            <div class="project-icon">üéØ</div>
            <h3 class="project-title">{project?.title || 'Untitled Project'}</h3>
            <p class="project-desc">{truncateText(project?.description || '', 150) || 'Project details coming soon.'}</p>
            {project?.url && (
              <a href={project.url} class="project-link" target="_blank" rel="noopener">
                Learn more ‚Üí
              </a>
            )}
          </div>
        ))}
      </div>
      {(validProjects?.length ?? 0) === 0 && (
        <p class="empty-state">Projects are being added. Check back soon!</p>
      )}
    </div>
  </section>

  <!-- Publications Section -->
  <section id="publications" class="section tab-content">
    <div class="container">
      {decades.map((decade) => (
        <div class="decade-group">
          <h3 class="decade-title">{decade}</h3>
          <div class="pub-grid">
            {(pubsByDecade[decade] || []).map((pub: any) => (
              <div class="pub-card">
                <div class="pub-year-badge">{pub?.year || '‚Äî'}</div>
                <h4 class="pub-title">{pub?.title || 'Untitled'}</h4>
                {pub?.publicationType && <span class="tag">{pub.publicationType}</span>}
                {pub?.abstract && (
                  <p class="pub-abstract">{truncateText(pub.abstract, 120)}</p>
                )}
                <div class="pub-links">
                  {pub?.doi && (
                    <a href={pub.doi.startsWith('http') ? pub.doi : `https://doi.org/${pub.doi}`} target="_blank" rel="noopener" class="pub-link">
                      DOI
                    </a>
                  )}
                  {pub?.url && (
                    <a href={pub.url} target="_blank" rel="noopener" class="pub-link">
                      View
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
      {(publications?.length ?? 0) === 0 && (
        <p class="empty-state">Publications are being added. Check back soon!</p>
      )}
    </div>
  </section>

  <!-- Media Section -->
  <section id="media" class="section tab-content">
    <div class="container">
      <div class="grid-3">
        {(media || []).map((item) => (
          <div class="media-card">
            <div class="media-icon">
              {item?.mediaType === 'podcast' ? 'üéôÔ∏è' : 
               item?.mediaType === 'video' ? 'üé¨' : 
               item?.mediaType === 'article' ? 'üì∞' : 'üì∫'}
            </div>
            <h3 class="media-title">{item?.title || 'Untitled'}</h3>
            {item?.outlet && <p class="media-outlet">{item.outlet}</p>}
            {item?.description && <p class="media-desc">{truncateText(item.description, 100)}</p>}
            {item?.url && (
              <a href={item.url} class="media-link" target="_blank" rel="noopener">
                Watch/Listen ‚Üí
              </a>
            )}
          </div>
        ))}
      </div>
      {(media?.length ?? 0) === 0 && (
        <p class="empty-state">Media appearances are being added. Check back soon!</p>
      )}
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Want to Collaborate?</h2>
        <p>I'm always looking for new partnerships on research, policy, and activist projects.</p>
        <a href={`${base}/collaborate`} class="btn btn-primary">Get in Touch</a>
      </div>
    </div>
  </section>
</Layout>

<style>
